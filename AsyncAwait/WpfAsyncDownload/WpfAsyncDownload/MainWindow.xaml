<Window x:Class="WpfAsyncDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WpfAsyncDownloader" Height="450" Width="725" Background="Black">
    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" MinWidth="70"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Margin="2,2,2,2">
            <Button Name="ButtonDownload" 
                Content="Download" Click="ButtonDownload_OnClick" Height="30" VerticalAlignment="Top" />
            <Button Name="ButtonCancel"
                Content="Cancel" Height="30"></Button>
            
            <Button Name="ButtonSave" Click="ButtonSave_OnClick" Height="30" Content="Save"></Button>
            <ComboBox Name="ComboBoxIndexFrom" Loaded="ComboBoxIndexFrom_OnLoaded"/>
            <ComboBox Name="ComboBoxIndexTo" Loaded="ComboBoxIndexTo_OnLoaded"></ComboBox>
            <ComboBox Name="ComboBoxNameFormat" Loaded="ComboBoxNameFormat_OnLoaded"></ComboBox>
            <ComboBox Name="ComboBoxExtension" Loaded="ComboBoxExtension_OnLoaded"></ComboBox>
            <TextBox Name="TextBoxPrefix"></TextBox>   
            <TextBox Name="TextBoxSuffix"></TextBox>
            <Button Name="ButtonOpenFileBrowser" Height="30" Content="Open"></Button>
        </StackPanel>
     
        <GridSplitter Grid.Column="1" Grid.Row="0"
            HorizontalAlignment="Center" ShowsPreview="True" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Width="5" Background="Black"/>
     
        <StackPanel Grid.Row="0" Grid.Column="2" Margin="2,2,2,2">
            <TextBox Name="TextBoxUrl" Height="20" Padding="2,2,2,2" FontFamily="Lucida Console" FontSize="11" TextWrapping="NoWrap" AcceptsReturn="False" CharacterCasing="Lower"
                     Background="Transparent" Foreground="Bisque"></TextBox>
            <TextBox Name="TextBoxResults" Grid.Column="2" Grid.Row="0" Height="*" FontFamily="Lucida Console" FontSize="10" Margin="5,5,5,5" BorderThickness="0"
                     Background="Transparent" Foreground="Bisque"/>
            
        </StackPanel>
 
    </Grid>
</Window>
