@{
    ViewBag.Title = "Search";
}

@section Head {
    <script src="@Url.Content("~/Scripts/lib/angular.js")"></script>
    <script src="@Url.Content("~/Scripts/app/ParticleCtrl.js")"></script>
}

<div ng-app>
    <div ng-controller="ParticleApp.ParticleCtrl">

        <p>{{title}}</p>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    
                    Search lepton:
                    <input ng-model="query" />

                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    
                    Sort by:
                    <select ng-model="orderProp">
                      <option value="name">Name ASC</option>
                      <option value="-name">Name DESC</option>
                      <option value="massMeV">Mass</option>
                    </select>

                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    
                    <ul>
                        <li ng-repeat="particle in particles | filter:query | orderBy:orderProp">
                            <p>{{particle.name}} ({{particle.symbol}}<sub>{{particle.subsymbol}}</sub><sup>{{particle.supsymbol}}</sup>) {{particle.massMeV}}</p>
                        </li>
                    </ul>

                </div>
            </div>


            <div id="status">Current filter: {{query}}</div>

            Json:
            <pre>
                 {{phones | json}} 
            </pre>
        </div>
    </div>
</div>
